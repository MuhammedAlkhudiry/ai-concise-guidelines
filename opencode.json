{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-gemini-auth",
    "@tarquinen/opencode-dcp@latest"
  ],
  "model": "<smart-model>",
  "small_model": "<fast-model>",
  "agent": {
    "explore": {
      "model": "<fast-model>"
    },
    "general": {
      "model": "<smart-model>"
    },
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "hugeicons": {
      "type": "local",
      "command": ["npx", "-y", "@hugeicons/mcp-server"]
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "mgrep": {
      "type": "local",
      "command": ["mgrep", "mcp"],
      "enabled": true
    }
  }
}
