{
  "model": "<smart-model>",
  "small_model": "<fast-model>",
  "permission": {
    "external_directory": {
      "*": "ask",
      "<home>/PhpstormProjects/*": "allow",
      "/tmp/*": "allow",
      "/private/tmp/*": "allow"
    },
    "read": {
      "**/.env*": "allow"
    }
  },
  "agent": {
    "plan": {
      "tools": {
        "write": true
      }
    },
    "explore": {
      "model": "<fast-model>"
    },
    "general": {
      "model": "<smart-model>"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "hugeicons": {
      "type": "local",
      "command": ["npx", "-y", "@hugeicons/mcp-server"]
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    }
  }
}
