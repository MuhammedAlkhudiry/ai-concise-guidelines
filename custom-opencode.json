{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "KNOWLEDGE.md"
  ],
  "plugin": [
    "opencode-anthropic-auth",
    "opencode-gemini-auth@latest",
    "@mohak34/opencode-notifier@latest"
  ],
  "keybinds": {
    "model_cycle_favorite": "ctrl+a",
    "model_cycle_favorite_reverse": "ctrl+shift+a"
  },
  "model": "<smart-model>",
  "small_model": "<fast-model>",
  "permission": {
    "external_directory": {
      "*": "ask",
      "<home>/PhpstormProjects/*": "allow",
      "/tmp/*": "allow",
      "/private/tmp/*": "allow",
      "~/.config/*": "allow"
    },
    "read": {
      "**/.env*": "allow"
    },
    "bash": {
      "ddev *": "allow",
      "git *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow"
    }
  },
  "agent": {
    "plan": {
      "disable": true
    },
    "explore": {
      "model": "<fast-model>"
    },
    "general": {
      "model": "<smart-model>"
    }
  }
}
