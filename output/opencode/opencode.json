{
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "provider": {
    "openai": {
      "models": {
        "gpt-5.2": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          },
          "variants": {
            "xhigh": {
              "reasoningEffort": "xhigh",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            },
            "high": {
              "reasoningEffort": "high",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            },
            "medium": {
              "reasoningEffort": "medium",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            },
            "low": {
              "reasoningEffort": "low",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            }
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 50000
            }
          }
        },
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 100000
            }
          }
        },
        "claude-haiku-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "plugin": [
    "opencode-gemini-auth",
    "@tarquinen/opencode-dcp@latest"
  ],
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    },
    "explore": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "general": {
      "model": "anthropic/claude-opus-4-5"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    },
    "hugeicons": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@hugeicons/mcp-server"
      ]
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "mgrep": {
      "type": "local",
      "command": [
        "mgrep",
        "mcp"
      ]
    }
  }
}