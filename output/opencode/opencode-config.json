{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "model_cycle_favorite": "ctrl+m",
    "model_cycle_favorite_reverse": "ctrl+shift+m"
  },
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "permission": {
    "external_directory": {
      "*": "ask",
      "<home>/PhpstormProjects/*": "allow",
      "/tmp/*": "allow",
      "/private/tmp/*": "allow"
    },
    "read": {
      "**/.env*": "allow"
    }
  },
  "agent": {
    "plan": {
      "tools": {
        "write": true
      }
    },
    "explore": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "general": {
      "model": "anthropic/claude-opus-4-5"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "hugeicons": {
      "type": "local",
      "command": ["npx", "-y", "@hugeicons/mcp-server"]
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    }
  }
}
